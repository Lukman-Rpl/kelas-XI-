<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Base.Theme.Kalkulator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Ubah warna utama dan aksen -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryContainer">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Override tombol biasa -->
        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Custom style untuk <Button> -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>


